  <focus>
    <!-- 1..1 资源类型 Type of resource -->
    <code value="ServiceRequest"/>
    <!-- 0..1 canonical(StructureDefinition) 该类型的结构定义 -->
    <profile value="http://StructureDefinition.hl7fhir.cn/laboratory-request"/>
     
    <!-- 1..1 最小 -->
    <min value="1"/>
    <!--  0..1 最大 -->
    <max value="1"/>
  </focus>

  <focus>
    <!-- 1..1 资源类型 Type of resource -->
